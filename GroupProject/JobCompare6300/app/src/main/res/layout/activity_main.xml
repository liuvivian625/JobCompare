<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editTextText"
            style="@style/BannerStyle"
            android:text="Job Compare"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/buttonCurrentJob"
            android:layout_width="242dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary"
            android:textSize="14sp"
            android:text="Current Job"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/buttonJobOffer"
            android:layout_width="242dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary"
            android:textSize="14sp"
            android:text="Job Offer" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <Button
            android:id="@+id/buttonComparisonSettings"
            android:layout_width="242dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary"
            android:textSize="14sp"
            android:text="Comparison Settings" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <Button
            android:id="@+id/buttonCompare"
            android:layout_width="242dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary"
            android:textSize="14sp"
            android:text="Compare" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>