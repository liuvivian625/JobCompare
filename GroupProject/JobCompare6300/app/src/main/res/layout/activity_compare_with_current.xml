<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CompareWithCurrentActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/editTextText"
                style="@style/BannerStyle"
                android:text="Compare Jobs" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableHeaderWithBackground"
                        android:text="Title" />
                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_border">
                    <TextView
                        android:id="@+id/textViewTitle1CompareWCur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableContent"
                        android:background="@drawable/table_cell_border"
                        />

                    <TextView
                        android:id="@+id/textViewTitle2CompareWCur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableContent"
                        android:background="@drawable/table_cell_border"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableHeaderWithBackground"
                        android:text="Company" />
                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_border">
                    <TextView
                        android:id="@+id/textViewCompany1CompareWCur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableContent"
                        android:background="@drawable/table_cell_border"
                        />

                    <TextView
                        android:id="@+id/textViewCompany2CompareWCur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableContent"
                        android:background="@drawable/table_cell_border"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableHeaderWithBackground"
                        android:text="Location" />
                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_border">
                    <TextView
                        android:id="@+id/textViewLocation1CompareWCur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableContent"
                        android:background="@drawable/table_cell_border"
                        />

                    <TextView
                        android:id="@+id/textViewLocation2CompareWCur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableContent"
                        android:background="@drawable/table_cell_border"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TableHeaderWithBackground"
                        android:text="Yearly Salary Adjusted for Cost of Living" />
                </TableRow>

                <TableRow
                    android:background="@drawable/table_row_border">
                    <TextView
                        android:id="@+id/textViewSalary1CompareWCur"
