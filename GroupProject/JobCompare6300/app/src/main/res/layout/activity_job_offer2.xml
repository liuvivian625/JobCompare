<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".JobOffer2Activity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/editTextText"
        style="@style/BannerStyle"
        android:text="Job Offers" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/buttonNewOfferJobOffer2"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/primary"
        android:textSize="14sp"
        android:text="New Offer"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <Button
        android:id="@+id/buttonMainMenuJobOffer2"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/primary"
        android:textSize="14sp"
        android:text="Main Menu" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <Button
        android:id="@+id/buttonCompareWithCurrentJobOffer2"
        android:layout_width="242dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/primary"
        android:textSize="14sp"
        android:text="Compare with Current"
        android:enabled="false"/>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>